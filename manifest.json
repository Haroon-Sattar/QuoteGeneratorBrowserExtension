{
    "name": "Random Quote Generator",
    "version": "0.0.0.1",
    "manifest_version": 3,
    "description": "Generates random quotes every time you open a new tab",
    "icons": {
        "16": "icons/Search16x16.png",
        "32": "icons/Search32x32.png",
        "48": "icons/Search48x48.png",
        "128": "icons/Search128x128.png"
    },
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": "icons/Search16x16.png"
    },
    "permissions": [
        "storage",
        "tabs",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [       
        "http://*/",
        "https://*/"
    ],
    "background": {
        "service_worker": "background/background.js"
    }
}